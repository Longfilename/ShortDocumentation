doctype html
html(lang="en")
  head
    - var title = '/src/templates/' + folder
    include ./includes/_head

  body
    include ./includes/_wrapper
      div.component-grid
        div.component-grid__content 
          div.card
            div.card__content.card__content--rich-text
              !=markdown
        
        div.component-grid__view
          - pages.map((page, index) => {
            a.button.js__template--open(href=page.url)
              i.fa.fa-desktop
              |  Open #{ page.title } Template
          - })
    
    div.template
      a.button.template__close.js__template--close
        span.template__close-text Close Template
        i.fa.fa-times(aria-hidden="true")
      
      div.template__overlay
        div.template__iframe-wrapper
          iframe.template__iframe
    
    div.resizer.resizer--template
      a.resizer-link.resizer-link--375(data-resizer="375px")
      a.resizer-link.resizer-link--768(data-resizer="768px")
      a.resizer-link.resizer-link--1024(data-resizer="1024px")
      a.resizer-link.resizer-link--100.resizer-link--active(data-resizer="100%")
    
    include ./includes/_foot
