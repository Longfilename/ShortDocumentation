- var content = locals.content || [];
doctype html
html(lang="en")
    head
        title ShortDocumentation for [insert project name]
        script(src="//code.jquery.com/jquery-2.1.4.min.js")
        script(src="./js/page-documentation.js")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            html,
            body {
                height: 100%;
                overflow: hidden;
            }
            div.container {
                display: flex;
                flex-direction: row;
                flex-wrap: nowrap;
                align-items: stretch;
                height: 100%;
            }
            div.col-iframe {
                order: 1;
                border: 1px solid red;
                padding: 16px;
                width: 50%;
            }
            div.col-readme {
                order: 2;
                padding: 16px;
                width: 30%;
            }
            div.col-nav {
                order: 3;
                flex-grow: 1;
                border: 1px solid red;
                padding: 16px;
                width: 10%;
            }
            iframe {
                border: 1px solid green;
                width: 100%;
            }
            ul {
                margin: 1em 0 0;
                padding-left: 2em;
            }
            ul a {
                cursor: pointer;
            }
            div.tabs,
            div.tab-body {
                padding: 16px;
                border: 1px solid green;
                margin: 16px 0;
            }
            div.tabs a {
                display: inline-block;
                border: 1px solid red;
                padding: 8px;
                cursor: pointer;
            }
            div.tabs a + a {
                margin-left: 16px;
            }
        link()
    
    body
        div.container
            div.col-iframe
                iframe(name="showme")
            
            div.col-readme
                p Page/Component files
                div.tabs
                select.files
                div.tab-body
            div.col-nav
                p Pages and Components
                ul
                    - (content.length) && content.map(function (item) {
                    li
                        a(href="./html/" + item.page,
                        target="showme",
                        data-json=item.json,
                        data-jade=item.jade,
                        data-js=item.js,
                        data-scss=item.scss,
                        data-md=item.md,
                        data-folder="./" + item.folder)=item.title
                    - })
