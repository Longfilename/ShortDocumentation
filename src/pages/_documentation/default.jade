- var content = locals.content || [];
doctype html
html(lang="en")
    head
        title ShortDocumentation for [insert project name]
        link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/styles/default.min.css")
        script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/highlight.min.js")
        script(src="//code.jquery.com/jquery-2.1.4.min.js")
        script(src="./js/page-documentation.js")
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            html,
            body {
                height: 100%;
                overflow: hidden;
            }
            div.container {
                display: flex;
                flex-direction: column;
                flex-wrap: nowrap;
                align-items: stretch;
                height: 100%;
            }
            div.row {
                display: flex;
                flex-direction: row;
                flex-wrap: nowrap;
                align-items: stretch;
                height: 100%;
            }
            div.row + div.row {
                height: 100px;
            }
            div.col-banner {
                order: 1;
                padding: 16px;
                width: 100%;
                background: #ddd;
            }
            div.col-iframe {
                box-sizing: content-box;
                flex: 2;
                order: 1;
                padding: 16px;
                position: relative;
                overflow: hidden;
            }
            div.col-readme {
                flex: 1;
                order: 2;
                padding: 16px;
                background: #eee;
                overflow: hidden;
            }
            div.iframe-container {
                position: absolute;
                top: 16px;
                bottom: 16px;
                left: 16px;
                right: 16px;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
            }
            iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
            ul {
                margin: 1em 0 0;
                padding-left: 2em;
            }
            ul a {
                cursor: pointer;
            }
            main {
                padding: 16px;
                border: 1px solid green;
                margin: 16px 0;
                max-width: 768px;
            }
            div.col-banner a {
                cursor: pointer;
            }
            div.col-banner a + a {
                margin-left: 1em;
            }
            next {}
    
    body
        div.container
            div.row
                div.col-iframe
                    div.iframe-container
                        iframe(frameborder="0")
                
                div.col-readme
                    header
                        h1
                            select.objects
                                - if (content.pages.length) {
                                    optgroup(label="Pages")
                                        - content.pages.map(function (item) {
                                            option(
                                                data-path="./html/" + item.page,
                                                data-json=item.json,
                                                data-jade=item.jade,
                                                data-js=item.js,
                                                data-scss=item.scss,
                                                data-md=item.md,
                                                data-folder="./" + item.folder)=item.title
                                        - })
                                - }
                                - if (content.modules.length) {
                                    optgroup(label="Modules")
                                        - content.modules.map(function (item) {
                                            option(
                                                data-path="./html/" + item.page,
                                                data-json=item.json,
                                                data-jade=item.jade,
                                                data-js=item.js,
                                                data-scss=item.scss,
                                                data-md=item.md,
                                                data-folder="./" + item.folder)=item.title
                                        - })
                                - }
                        h2
                            select.files
                    main
                        pre
                            code.content
                        div.content
            div.row
                div.col-banner
                    p
                        a.set-flex-width(data-widths=["0 0 1200px", "1"]) iframe (1200)
                        a.set-flex-width(data-widths=["0 0 1024px", "1"]) iframe (1024)
                        a.set-flex-width(data-widths=["0 0 768px", "1"]) iframe (768)
                        a.set-flex-width(data-widths=["0 0 480px", "1"]) iframe (480)
                        a.set-flex-width(data-widths=["1", "0 0 768px"]) docs
                        a.set-flex-width(data-widths=["2", "1"]) default
